/* Finance Agent TUI stylesheet */

Screen {
    layout: vertical;
}

/* Dashboard split layout */
#main-content {
    layout: horizontal;
    height: 1fr;
}

#agent-chat {
    width: 3fr;
    height: 1fr;
    border: solid $accent;
}

#sidebar {
    width: 1fr;
    min-width: 30;
    max-width: 50;
    padding: 0 1;
}

/* Chat */
#chat-log {
    height: 1fr;
    scrollbar-size: 1 1;
}

#chat-input-row {
    dock: bottom;
    height: 3;
    border-top: solid $accent;
}

#chat-input {
    width: 1fr;
}

#stop-btn {
    width: auto;
    min-width: 8;
    display: none;
}

#clear-btn {
    width: auto;
    min-width: 10;
}

/* Status bar */
StatusBar {
    dock: bottom;
    height: 1;
    background: $surface;
    color: $text-muted;
    padding: 0 1;
}

/* Portfolio panel */
PortfolioPanel {
    height: auto;
    padding: 1;
    border: solid $primary;
    margin: 0 0 1 0;
}

PortfolioPanel .portfolio-title {
    text-style: bold;
    margin-bottom: 1;
}

/* Knowledge base screen */
KnowledgeBaseScreen {
    layout: vertical;
}

#kb-version-banner {
    display: none;
    height: 1;
    background: $warning;
    color: $text;
    padding: 0 1;
}

#kb-content-scroll {
    height: 1fr;
    padding: 1;
}

#kb-versions-title {
    padding: 0 1;
    text-style: bold;
}

#kb-versions-table {
    height: auto;
    max-height: 12;
}

/* Rec cards */
RecCard {
    height: auto;
    padding: 1;
    border: solid $warning;
    margin: 0 0 1 0;
}

RecCard .rec-title {
    text-style: bold;
}

RecCard .rec-detail {
    color: $text-muted;
}

RecCard .rec-stale {
    color: $error;
    text-style: bold;
}

RecCard .rec-actions {
    height: 3;
    margin-top: 1;
}

RecCard .rec-actions Button {
    margin-right: 1;
}

/* Rec list */
RecList {
    height: 1fr;
    padding: 0;
}

RecList .rec-list-title {
    text-style: bold;
    margin-bottom: 1;
}

RecList .rec-empty {
    color: $text-muted;
    text-style: italic;
}

/* AskModal */
AskModal {
    align: center middle;
}

#ask-dialog {
    width: 70;
    height: auto;
    max-height: 80%;
    border: thick $accent;
    padding: 1 2;
    background: $surface;
}

#ask-dialog .question-header {
    text-style: bold;
    margin-bottom: 1;
}

#ask-dialog .option-btn {
    width: 100%;
    margin: 0 0 1 0;
}

/* Confirm modal */
ConfirmModal {
    align: center middle;
}

#confirm-dialog {
    width: 60;
    height: auto;
    border: thick $warning;
    padding: 1 2;
    background: $surface;
}

#confirm-actions {
    height: 3;
    margin-top: 1;
    align: center middle;
}

#confirm-actions Button {
    margin: 0 1;
}

/* Recommendations screen */
RecommendationsScreen {
    layout: vertical;
}

#recs-container {
    height: 1fr;
    padding: 1;
}

/* Portfolio screen */
PortfolioScreen {
    layout: vertical;
}

#portfolio-container {
    height: 1fr;
    padding: 1;
}

.balance-card {
    height: auto;
    padding: 1;
    border: solid $primary;
    margin: 0 0 1 0;
}

/* History screen */
HistoryScreen {
    layout: vertical;
}

#history-container {
    height: 1fr;
    padding: 1;
}

/* Performance screen */
PerformanceScreen {
    layout: vertical;
}

#performance-container {
    height: 1fr;
    padding: 1;
}

#perf-summary {
    padding: 1;
    border: solid $success;
    margin: 0 0 1 0;
}
